<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_bg"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_tab"
        android:background="@drawable/top_tab_bg">
        <LinearLayout 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
            android:layout_centerInParent="true">
			<TextView
				android:id="@+id/ftp_title"
				android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textAppearance="@style/Large_Title"
				android:text="@string/sms_backup"/>
        </LinearLayout>
        <Button 
        	android:id="@+id/back" 
        	android:layout_centerVertical="true" 
        	android:layout_alignParentLeft="true" 
        	android:background="@drawable/btn_back_bg" 
        	android:layout_width="80dip" 
        	android:layout_height="wrap_content" 
        	android:text="@string/btn_back_default" 
        	android:textColor="@color/white"
        	android:paddingLeft="15dip"/>
    </RelativeLayout>
    
                    <View
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                />
                    <LinearLayout
            android:id="@+id/sms_backup_button"
            android:layout_width="fill_parent"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/remote_button"
            android:gravity="center" >
        <ViewSwitcher
            	android:id="@+id/sms_backup_switcher"
            	android:layout_width="48dip"
				android:layout_height="48dip"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
            >
			<ImageView
			    android:layout_width="48dip"
				android:layout_height="48dip"
				android:src="@drawable/icon_sms"
			    />
             <ProgressBar 
                 android:id="@+id/sms_backup_progress"
				android:layout_width="32dip"
				android:layout_height="32dip"
				android:minHeight="32dip" 
				android:maxHeight="32dip"
				android:layout_gravity="center"
		 		android:indeterminate="false"
				android:indeterminateDrawable="@drawable/sync_progress"
			/>
             </ViewSwitcher>
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_weight="1.0"
			    >
            <TextView
                android:id="@+id/sms_backup_button_title"
                android:layout_width="wrap_content"
                android:duplicateParentState="true"
                android:layout_height="wrap_content"
                android:textColor="@color/ftp_btn_color"
                android:text="@string/sms_backup_button_text"
                android:textSize="28.0dp" />
            <TextView
                android:id="@+id/sms_backup_button_text"
                android:layout_width="wrap_content"
                android:duplicateParentState="true"
                android:layout_height="wrap_content"
                android:textColor="@color/ftp_btn_color"
                android:text="@string/sms_backup_button_text"
                android:textSize="16.0dp" />
            </LinearLayout>
        </LinearLayout>
        <View
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                />
              <LinearLayout
            android:id="@+id/sms_recover_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/remote_button"
            android:gravity="center" >
            <ViewSwitcher
            	android:id="@+id/sms_recover_switcher"
            	android:layout_width="48dip"
				android:layout_height="48dip"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="10dip"
            >
			<ImageView
			    android:layout_width="48dip"
				android:layout_height="48dip"
				android:src="@drawable/icon_sms"
			    />
                  <ProgressBar 
                android:id="@+id/sms_recover_progress"
				android:layout_width="32dip"
				android:layout_height="32dip"
				android:minHeight="32dip" 
				android:maxHeight="32dip"
				android:layout_gravity="center"
		 		android:indeterminate="false"
				android:indeterminateDrawable="@drawable/sync_progress"
			/>
                  </ViewSwitcher>
                  
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_weight="1.0"
			    >
            <TextView
                android:id="@+id/sms_recover_button_title"
                android:layout_width="wrap_content"
                android:duplicateParentState="true"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/ftp_btn_color"
                android:text="@string/sms_recover_button_text"
                android:textSize="28.0dp" />
            <TextView
                android:id="@+id/sms_recover_button_text"
                android:layout_width="wrap_content"
                android:duplicateParentState="true"
                android:layout_height="wrap_content"
                android:textColor="@color/ftp_btn_color"
                android:text="@string/sms_recover_button_text"
                android:visibility="visible"
                android:textSize="16.0dp" />
            </LinearLayout>
        </LinearLayout>
        <!--View
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                />
              <LinearLayout
            android:id="@+id/sms_backup_history_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/remote_button"
            android:gravity="center" >

            <TextView
                android:id="@+id/sms_backup_history_button_text"
                android:layout_width="wrap_content"
                android:duplicateParentState="true"
                android:layout_height="wrap_content"
                android:drawablePadding="10.0dp"
                android:gravity="center"
                android:textColor="@color/ftp_btn_color"
                android:text="@string/sms_backup_history_button_text"
                android:textSize="28.0dp" />
        </LinearLayout-->
			<View
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                />

			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:visibility="gone"
			    >
			</LinearLayout>
 
</LinearLayout>