<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/file_browse_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/kanbox_intro_logo"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/kanbox_logo"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kanbox_intro_slogan"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/kanbox_intro_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/kanbox_start_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:drawableLeft="@drawable/taobao_logo"
            android:drawablePadding="5dp"
            android:text="@string/kanbox_intro_login_with_taobao" />

        <Button
            android:id="@+id/kanbox_start"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/kanbox_blue"
            android:textColor="@color/white"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:text="@string/kanbox_intro_login" />

    </LinearLayout>

</LinearLayout>
