<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingLeft="4dp"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	<RelativeLayout android:id="@+id/treeview_list_item_image_layout" android:layout_width="wrap_content"
		android:layout_height="fill_parent">
		<ImageView android:id="@+id/treeview_list_item_image" 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:src="@drawable/collapsed" >
		</ImageView>
	</RelativeLayout>
	<FrameLayout android:id="@+id/treeview_list_item_frame" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1">
	</FrameLayout>
</LinearLayout>
