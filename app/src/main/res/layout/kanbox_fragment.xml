<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kanbox_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/kanbox_ad"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/kanbox_ad_ok"
            android:text="@string/download_kanbox_android_client"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/kanbox_ad_close"
            android:padding="5dip"
            android:layout_weight="0"
            android:src="@drawable/operation_button_cancel"
            android:background="@null"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <RelativeLayout
        android:layout_above="@id/kanbox_ad"
            android:id="@+id/fragment_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
    </RelativeLayout>

</RelativeLayout>
