<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:paddingTop="16dp"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:paddingBottom="16dp"
    >
	
    <RadioButton
        android:id="@+id/radio_sort_by_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="left|center_vertical"
        android:text="@string/sort_by_date"
        android:textAppearance="@style/TextAppearancePrimary"
        android:paddingLeft="16dp"
        />
    <RadioButton
        android:id="@+id/radio_sort_by_size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="left|center_vertical"
        android:text="@string/sort_by_size"
        android:textAppearance="@style/TextAppearancePrimary"
        android:paddingLeft="16dp"/>
    <RadioButton
        android:id="@+id/radio_sort_by_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="left|center_vertical"
        android:text="@string/sort_by_name"
        android:textAppearance="@style/TextAppearancePrimary"
        android:paddingLeft="16dp"/>
    <RadioButton
        android:id="@+id/radio_sort_by_extension"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="left|center_vertical"
        android:text="@string/sort_by_extension"
        android:textAppearance="@style/TextAppearancePrimary"
        android:paddingLeft="16dp"/>
</RadioGroup>