<ScrollView
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	>
	<LinearLayout
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">
	<ImageView
		android:layout_marginTop="10dip"
		android:layout_gravity="center"
		android:layout_width="150dip"
		android:layout_height="150dip"
		android:src="@drawable/logo"/>
		<TextView
		android:layout_marginBottom="5dip"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/app_name"
		android:textSize="30sp"
		android:textColor="@color/gray"
		/>
	
		<LinearLayout android:orientation="vertical"
		android:paddingTop="5.0dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="15.0dip" android:layout_marginTop="10.0dip"
		android:layout_marginRight="15.0dip">
		  <LinearLayout
		      android:layout_width="fill_parent"
				android:layout_height="55.0dip" 
				android:clickable="true"
		      android:background="@drawable/preference_first_item"
		      >
		<TextView android:gravity="center_vertical" android:id="@+id/about_us_activity_version"
			android:layout_width="wrap_content" android:layout_weight="1.0"
			android:layout_height="fill_parent" android:text="@string/about_us_activity_version"
			style="@style/PreferenceSmallText" />
		<TextView android:gravity="center_vertical" android:id="@+id/about_us_activity_version_value"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:text="1.0" android:paddingRight="5dip"
			style="@style/PreferenceSmallText" android:textColor="@color/gray"/>
		</LinearLayout>
		<TextView android:gravity="center_vertical" android:id="@+id/about_us_activity_upgrade"
			android:background="@drawable/preference_last_item"
			android:clickable="true" android:layout_width="fill_parent"
			android:layout_height="55.0dip" android:text="@string/about_us_activity_upgrade"
			android:drawableRight="@drawable/arrow_right" style="@style/PreferenceSmallText" />
		<!--TextView android:gravity="center_vertical" android:id="@+id/about_us_activity_faq"
			android:background="@drawable/preference_last_item"
			android:clickable="true" android:layout_width="fill_parent"
