<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_selector"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >
    <ImageView android:id="@+id/icon" android:layout_width="36dp" android:layout_height="36dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"/>
    <TextView android:id="@+id/name" style="@style/CategoryButtonTextStyle"/>
    <!--TextView android:id="@+id/count" style="@style/CategoryButtonCountTextStyle" /!-->
</LinearLayout>
