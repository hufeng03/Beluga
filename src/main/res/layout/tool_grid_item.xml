<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="55dip"
    android:paddingLeft="8dip"
    android:background="@drawable/grid_item_bg">
    
    <ImageView
        android:id="@+id/tool_icon"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:duplicateParentState="true"
        android:scaleType="centerInside"
        android:src="@drawable/file_icon_file" />

    <TextView
        android:id="@+id/tool_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:duplicateParentState="true"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/file_name_normal"
        android:text="yyy"
        android:textSize="14sp" />

      	<!--TextView
            android:id="@+id/tool_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:textColor="@color/file_date_normal"
            android:paddingRight="5dip"
            android:textSize="10sp" /-->
    

</RelativeLayout>