<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_weight="1"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">
    <TextView
        android:id="@+id/space_volume_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        style="@style/InformationTextStyle"  
        android:drawablePadding="5dip"
        android:drawableLeft="@drawable/sd_card_icon"
        />
    <TextView
        android:id="@+id/space_volume_description"
        style="@style/InformationTextStyle"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />
    <com.hufeng.filemanager.view.CategoryBar
        android:layout_below="@id/space_volume_label"
        android:id="@+id/space_volume_stats"
        android:layout_width="fill_parent" 
        android:layout_height="8dip"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="3dp"/>

</RelativeLayout>