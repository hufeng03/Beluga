    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        
               	<LinearLayout android:orientation="vertical"
		android:paddingTop="5.0dip"
		android:layout_gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="15.0dip" android:layout_marginTop="10.0dip"
		android:layout_marginRight="15.0dip">
		<LinearLayout android:gravity="center_vertical" android:id="@+id/settings_scan_hidden"
			android:background="@drawable/preference_first_item"
			android:paddingLeft="10.0dip" android:paddingTop="10.0dip"
			android:paddingRight="10.0dip" android:paddingBottom="10.0dip"
			android:layout_width="fill_parent"
			android:layout_height="55.0dip"
			style="@style/PreferenceSmallText" >
		<TextView
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_weight="1.0"
		    android:text="@string/settings_scan_hidden"
		    android:textColor="@color/gray"
		    />
		<CheckBox
			android:layout_weight="0.0"
		    android:id="@+id/settings_scan_hidden_check"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:button="@drawable/checkbox_settings"
		    />
		</LinearLayout>
		<LinearLayout android:gravity="center_vertical" android:id="@+id/settings_scan_game"
			android:background="@drawable/preference_item"
			android:paddingLeft="10.0dip" android:paddingTop="10.0dip"
			android:paddingRight="10.0dip" android:paddingBottom="10.0dip"
			android:layout_width="fill_parent"
			android:layout_height="55.0dip"
			style="@style/PreferenceSmallText" >
		<TextView
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_weight="1.0"
		    android:text="@string/settings_scan_game"
		    android:textColor="@color/gray"
		    />
		<CheckBox
			android:layout_weight="0.0"
		    android:id="@+id/settings_scan_game_check"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:button="@drawable/checkbox_settings"
		    />
		</LinearLayout>
		<LinearLayout android:gravity="center_vertical" android:id="@+id/settings_scan_filter_small_image"
			android:background="@drawable/preference_item"
			android:paddingLeft="10.0dip" android:paddingTop="10.0dip"
			android:paddingRight="10.0dip" android:paddingBottom="10.0dip"
			android:layout_width="fill_parent"
			android:layout_height="55.0dip"
			style="@style/PreferenceSmallText" >
		<TextView
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_weight="1.0"
		    android:textColor="@color/gray"
		    android:text="@string/settings_scan_small_image"
		    />
		<CheckBox
			android:layout_weight="0.0"
		    android:id="@+id/settings_scan_filter_small_image_check"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:button="@drawable/checkbox_settings"
		    />
		</LinearLayout>
		<LinearLayout android:gravity="center_vertical" android:id="@+id/settings_scan_filter_small_audio"
			android:background="@drawable/preference_last_item"
			android:paddingLeft="10.0dip" android:paddingTop="10.0dip"
			android:paddingRight="10.0dip" android:paddingBottom="10.0dip"
